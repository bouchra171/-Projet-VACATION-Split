@model VacationSplit.Models.User

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f2f2f2;
    }

    .card {
        max-width: 800px;
        margin: 50px auto;
        display: flex;
        flex-direction: column;
        border-radius: 5px;
        box-shadow: 0px 10px 20px rgba(0,0,0,0.1);
        background-color: #fff;
        overflow: hidden;
    }

    .card-header {
        background: #2F4F4F;
        border-radius: 10px 10px 0 0;
        color: #FFF;
        padding: 10px;
        font-size: 2em;
        text-align: center;
    }

    .card-body {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        border-bottom: 1px solid #ddd;
    }

    .image-container {
        flex: 1 0 10%;
        border-right: 1px solid #ddd;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        margin-right: 20px;
    }

    .form-container {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        padding: 20px;
    }

    .control-label {
        font-weight: 500;
        font-size: 1.2em;
        margin-bottom: 10px;
        color: #3f51b5;
    }

    .form-control {
        border-radius: 5px;
        padding: 10px;
        font-size: 1.1em;
        background: #fff;
        transition: box-shadow .3s, background .3s;
        border: 1px solid #ddd;
        font-family: 'Roboto', sans-serif;
        color: #000;
    }

        .form-control:focus {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-color: rgba(0, 0, 0, 0.1);
            background: transparent;
            color: #000;
        }

    .btn-primary {
        background: #ff9800;
        border: none;
        color: #FFF;
        padding: 10px 20px;
        transition: all 0.5s;
        margin: 10px;
    }

        .btn-primary:hover {
            background: #e87928;
            opacity: 0.9;
        }

    .image-container img {
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
    }

    @@media only screen and (max-width: 800px) {
        .card-body {
            flex-direction: column;
        }

        .image-container, .form-container {
            height: auto;
            flex: none;
        }

            .image-container img {
                height: auto;
                width: 100%;
            }
    }
</style>


<div class="card">
    <div class="card-header text-center">
        <h3>User Details</h3>
    </div>
    <div class="card-body">
        <div class="image-container">
            @if (!string.IsNullOrEmpty(Model.ProfileImage))
            {
                <img src="@Url.Content(Model.ProfileImage)" alt="Profile Image" />
            }
            else
            {
                <p>No profile image available.</p>
            }
        </div>
        <div class="form-container">
            @if (Model != null)
            {
                <div class="form-group">
                    <label class="control-label">Email:</label>
                    <p class="form-control">@Model.Email</p>
                </div>
                <div class="form-group">
                    <label class="control-label">First Name:</label>
                    <p class="form-control">@Model.FirstName</p>
                </div>
                <div class="form-group">
                    <label class="control-label">Last Name:</label>
                    <p class="form-control">@Model.LastName</p>
                </div>
                <div class="form-group">
                    <label class="control-label">Ville:</label>
                    <p class="form-control">@Model.Ville</p>
                </div>
            }
            else
            {
                <p>User not found.</p>
            }
        </div>
    </div>
    <div class="card-footer text-center">
        @if (Model != null)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        }
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</div>
