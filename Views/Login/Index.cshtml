@model VacationSplit.Models.User

@section Styles {

    <style>

        body {
            background: #f4f4f4;
            height: 100vh;
            margin: 0;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .login-container {
            background: linear-gradient(to right, #73a9c2, #2F4F4F);
            height: 60vh;
            padding: 20px 0;
            color: #000;
            border-radius: 15px;
            box-shadow: 5px 0px 15px rgba(0, 0, 0, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: auto;
            width: 60%;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .form-control {
            width: 100%;
            height: 50px;
            border-radius: 15px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
            padding: 0 20px;
            font-size: 18px;
            border: none;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.4);
            }

            .form-control::placeholder {
                color: white;
            }

        h4 {
            color: #;
            font-size: 2em;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            font-family: 'Helvetica Neue', sans-serif;
            font-weight: bold;
            letter-spacing: 2px;
            text-transform: uppercase;
            text-align: center;
        }
    </style>
}

<div class="login-container">
    <div class="inner-container">
        <h4>Bienvenue</h4>
        <form asp-action="ProcessLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group position-relative">
                <i class="fas fa-envelope"></i>
                <input asp-for="Email" class="form-control form-control-lg" required type="email" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group position-relative">
                <i class="fas fa-key"></i>
                <input asp-for="Password" class="form-control form-control-lg" type="password" required placeholder="Mot de passe" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block" style="background-color: #2F4F4F;">Connexion</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


