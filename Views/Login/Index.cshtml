@model VacationSplit.Models.User

@section Styles {
    <style>
        body {
            height: 100vh;
            margin: 0;
            background-repeat: no-repeat;
            background-attachment: fixed;
            transition: all 0.3s ease;
            overflow: hidden;
        }

        #bgvideo {
            position: absolute;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            z-index: -100;
            transform: translateX(-50%) translateY(-50%);
        }

        .login-container {
            background: rgba(255, 255, 255, 0.7);
            height: 60vh;
            padding: 20px 0;
            color: #000;
            border-radius: 15px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin: auto;
            width: 50%;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .form-control {
            border-radius: 5px;
            padding: 10px;
            font-size: 1.1em;
            background: transparent;
            border: 1px solid #aaa; 
            transition: box-shadow .3s;
        }

            .form-control:focus {
                box-shadow: 0 0 10px rgba(255, 140, 0, 0.5); 
                border-color: rgba(255, 140, 0, 0.5); 
            }

        .btn {
            border-radius: 5px;
            padding: 10px;
            font-size: 1.1em;
            background: rgba(255, 140, 0, 0.8); 
            transition: all 0.5s;
            border: none;
            color: #FFF;
        }

            .btn:hover {
                background: rgba(255, 140, 0, 1); 
                opacity: 0.8;
            }
    </style>
}

<body>
    <video playsinline autoplay muted loop id="bgvideo">
        <source src="https://marketplace.canva.com/EAFplT5ga5E/1/0/800w/canva-post-facebook-vacances-scrapbook-vintage-beige-U7EKgae5d78.mp4" type="video/mp4">
    </video>

    <div class="login-container">
        <h4>Bienvenue</h4>
        <form asp-action="ProcessLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group position-relative">
               
                <input asp-for="Email" class="form-control form-control-lg" required type="email" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group position-relative">
                
                <input asp-for="Password" class="form-control form-control-lg" type="password" required placeholder="Mot de passe" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Connexion</button>
            </div>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>